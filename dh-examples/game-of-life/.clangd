CompileFlags:
  Compiler: clang
  Add:
    - -xc
    - -std=c17
    - -Wall
    - -Wextra
    - -Werror
    - -funsigned-char
    - -fblocks
    - -IC:\dev\dasae-headers\dh\include
    - -IC:\dev\dasae-headers\dh\libs\BlocksRuntime\include
    - -IC:\dev\dasae-headers\dh-examples\game-of-life\src
    - -IC:\dev\dasae-headers\dh-examples\game-of-life\include
    - -IC:\dev\dasae-headers\dh-examples\game-of-life\lib\deps
# Diagnostics:
#   UnusedIncludes: Strict
#   MissingIncludes: Strict
#   ClangTidy:
#     Add:
#       - modernize*
#       - performance*
#       - readability*
#       - bugprone*
#       - portability*
#     Remove:
#       - modernize-use-trailing-return-type
#       - readability-named-parameter
InlayHints:
  Enabled: true
  TypeNameLimit: 24
  DeducedTypes: true
  ParameterNames: true
  Designators: true
  BlockEnd: false
Hover:
  ShowAKA: true
---
If:
  PathMatch:
    - .*\.h
    - .*\.hh
    - .*\.hpp
    - .*\.hxx
CompileFlags:
  Add:
    - -Wno-unused-function
    - -Wno-unused-variable
    - -Wno-unused-const-variable
