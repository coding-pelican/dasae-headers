# ========== Global ==========
---
Index:
  Background: Skip
  StandardLibrary: false
Diagnostics:
  Suppress:
    - ".*include/c/.*"
    - ".*include/c\\+\\+/.*"
  UnusedIncludes: None
  MissingIncludes: None
Completion:
  AllScopes: true
  ArgumentLists: FullPlaceholders
  # HeaderInsertion: IWYU
  # CodePatterns: All
InlayHints:
  BlockEnd: false
  Designators: true
  Enabled: true
  ParameterNames: true
  DeducedTypes: true
  DefaultArguments: false
  TypeNameLimit: 24
Hover:
  ShowAKA: true
  # MacroContentsLimit: 2048
# Documentation:
#   CommentFormat: Doxygen
# ========== Excludes ==========
---
If:
  PathExclude:
    - .*archive*/.*
    - .*backup*/.*
    - .*draft*/.*
    - .*temp*/.*
# ========== C Sources ==========
---
If:
  PathMatch:
    - .*\.c
    - .*\.h
CompileFlags:
  Compiler: clang
  Add:
    - -xc
    - -std=c17
    - -I/mnt/c/dev/dasae-headers/dh
    - -I/mnt/c/dev/dasae-headers/dh/include
    - -I/mnt/c/dev/dasae-headers/dh/libs/BlocksRuntime/include
    - -IC:/dev/dasae-headers/dh
    - -IC:/dev/dasae-headers/dh/include
    - -IC:/dev/dasae-headers/dh/libs/BlocksRuntime/include
    - -Wall
    - -Wextra
    - -Werror
    - -funsigned-char
    - -fblocks
# ========== C++ Sources ==========
---
If:
  PathMatch:
    - .*\.cc
    - .*\.cxx
    - .*\.cpp
    - .*\.hh
    - .*\.hxx
    - .*\.hpp
CompileFlags:
  Compiler: clang
  Add:
    - -xc++
    - -std=c++20
    - -I/mnt/c/dev/dasae-headers/dh
    - -I/mnt/c/dev/dasae-headers/dh/include
    - -I/mnt/c/dev/dasae-headers/dh/libs/BlocksRuntime/include
    - -IC:/dev/dasae-headers/dh
    - -IC:/dev/dasae-headers/dh/include
    - -IC:/dev/dasae-headers/dh/libs/BlocksRuntime/include
    - -Wall
    - -Wextra
    - -Werror
    - -funsigned-char
    - -fblocks
# ========== Headers ==========
---
If:
  PathMatch:
    - .*\.h
    - .*\.hh
    - .*\.hxx
    - .*\.hpp
CompileFlags:
  Add:
    - -Wno-unused-function
    - -Wno-unused-variable
    - -Wno-unused-const-variable
# Project ==========
---
If:
  PathMatch:
    - .*\.c
    - .*\.h
CompileFlags:
  Add:
    - -I/mnt/c/dev/dasae-headers/dh-examples/terraria/src
    - -I/mnt/c/dev/dasae-headers/dh-examples/terraria/include
    - -I/mnt/c/dev/dasae-headers/dh-examples/terraria/lib/deps
    - -IC:/dev/dasae-headers/dh-examples/terraria/src
    - -IC:/dev/dasae-headers/dh-examples/terraria/include
    - -IC:/dev/dasae-headers/dh-examples/terraria/lib/deps
